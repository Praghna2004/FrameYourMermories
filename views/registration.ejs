function validateAttributes(attributes) {
  const errors = {};


  if (!/^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$/.test(attributes.name)) {
     errors.name = "Invalid name.";
  }

  
  if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(attributes.emailid)) {
     errors.emailid = "Invalid emailid.";
  }

  
  if (!/^[A-Z]{5}[0-9]{4}[A-Z]{1}$/.test(attributes.pancard)) {
     errors.pancard = "Invalid pancard number.";
  }

  
  if (!/^[0-9]+$/.test(attributes.experience) || attributes.experience < 0) {
     errors.experience = "Invalid experience.";
  }

  
  if (!/^[0-9]{10}$/.test(attributes.phone)) {
     errors.phone = "Invalid phone number.";
  }

  
  if (attributes.address.trim().length === 0) {
     errors.address = "Address cannot be empty.";
  }

  
  if (!/^[0-9]{6}$/.test(attributes.pincode)) {
     errors.pincode = "Invalid pincode.";
  }

  return errors;
}
